<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <!-- Development mode -->
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.convention.default.parent.package" value="struts-default"/>

    <package name="default" extends="json-default">
        <!-- Attendance Actions -->
        <action name="signIn" class="com.attendance.action.AttendanceAction" method="signIn">
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>

        <action name="signOut" class="com.attendance.action.AttendanceAction" method="signOut">
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>

        <action name="viewHistory" class="com.attendance.action.AttendanceAction" method="viewHistory">
            <result name="success" type="json"/>
        </action>
    </package>
</struts>
